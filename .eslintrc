{
	"root": true,
	"env": {
		"es2021": true,
		"node": true
	},
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"extends": [
				"airbnb-typescript/base",
				"eslint:recommended",
				"plugin:import/recommended",
				"plugin:node/recommended"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"ecmaVersion": 12,
				"sourceType": "module",
				"project": [
					"./tsconfig.json"
				]
			},
			"plugins": [
				"import",
				"@typescript-eslint",
				"unused-imports"
			],
			"rules": {
				"node/no-extraneous-import": [
					"error",
					{
						"allowModules": [
							"ucrypto-sdk"
						]
					}
				],
				"node/no-unsupported-features/es-syntax": [
					"error",
					{
						"ignores": [
							"modules"
						]
					}
				],
				"@typescript-eslint/no-use-before-define": "off",
				"unused-imports/no-unused-imports": "error",
				"import/no-unresolved": "off",
				"node/no-missing-import": "off",
				"import/order": [
					"error",
					{
						"alphabetize": {
							"order": "asc",
							"caseInsensitive": true
						},
						"groups": [
							"builtin",
							"external",
							"index",
							[
								"internal",
								"parent",
								"sibling"
							]
						],
						"newlines-between": "always",
						"pathGroups": [
							{
								"pattern": "@middlewares",
								"group": "internal"
							},
							{
								"pattern": "@routes",
								"group": "internal"
							},
							{
								"pattern": "@interfaces",
								"group": "internal"
							},
							{
								"pattern": "@services",
								"group": "internal"
							},
							{
								"pattern": "@dto",
								"group": "internal"
							},
							{
								"pattern": "@models/**",
								"group": "internal"
							},
							{
								"pattern": "@controllers/**",
								"group": "internal"
							},
							{
								"pattern": "@configs/**",
								"group": "internal"
							},
							{
								"pattern": "@utils/**",
								"group": "internal"
							},
							{
								"pattern": "src/**",
								"group": "internal",
								"position": "after"
							}
						],
						"pathGroupsExcludedImportTypes": []
					}
				],
                "indent": ["error", 2]
			},
			"settings": {
				"eslint.nodePath": "./server",
				"import/core-modules": [
					"ucrypto-sdk"
				]
			}
		}
	]
}